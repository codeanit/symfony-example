{% extends "BackendBundle:Secured:secured-layout.html.twig" %}

{% block body %}
  <div class="jumbotron">
      <h2>Transactions List</h2>
      <br>         
      <table class="table table-hover">
          <tr>
              <th>S.N</th>
              <th>Transaction Key</th>
              <th>Transaction Code</th>
              <th>Transaction Source</th>
              <th>Transaction Service</th>
              <th>Transaction Status</th>
              <th>Status</th>
              <th>Sender</th>
              <th>Sender Country</th>
              <th>Receiver</th>
              <th>Receiver Country</th>
          </tr>
          
          {% for entry in transactions %}
          <tr>
              <td>{{loop.index}}</td>
              <td>{{ entry.transaction_key }}</td>               
              <td>{{ entry.transaction_code }}</td>               
              <td>{{ entry.transaction_source }}</td>               
              <td>{{ entry.transaction_service }}</td>               
              <td>{{ entry.transaction_status }}</td>               
              <td>{{ entry.status }}</td>               
              <td>{{ entry.sender_first_name }} {{ entry.sender_last_name }}</td>               
              <td>{{ entry.sender_country }}</td>               
              <td>{{ entry.receiver_first_name }} {{ entry.receiver_last_name }}</td>               
              <td>{{ entry.receiver_country }}</td>               
          </tr>
          {% endfor %}
      </table>
  </div>
{% endblock %}
